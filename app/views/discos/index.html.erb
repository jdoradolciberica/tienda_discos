<p style="color: green"><%= notice %></p>

<h1 class="ms-5">Discos</h1>
<div class="container my-3 w-75">
  <%= form_with url: discos_buscar_url, method: :get do |f| %>
  <div class="input-group">
      <%= f.text_field :q, placeholder: "Busca un disco", class: "form-control" %>
      <%= f.submit "Buscar", class: "btn btn-primary" %>
  </div>
  <% end %>
</div>

<div id="discos" class="container m-auto mt-5  ">
    <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3">
    <% @discos.each do |disco| %>
    <div class="col">
      <%= render disco %>
    </div>
    <% end %>

    </div>
</div>

<div class="d-flex mt-4 m-auto justify-content-center">
<%== pagy_bootstrap_nav(@pagy) %>
</div>

