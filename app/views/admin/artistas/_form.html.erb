<%= form_with(model: [:admin, artista]) do |form| %>
  <% if artista.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(artista.errors.count, "error") %> prohibited this artista from being saved:</h2>

      <ul>
        <% artista.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mt-2">
    <%= form.label :nombre %>
    <%= form.text_field :nombre %>
  </div>
