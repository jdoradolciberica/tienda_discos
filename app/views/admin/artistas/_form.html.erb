    <%= form.label :fecha_nacimiento %>
    <%= form.date_field :fecha_nacimiento %>
  </div>
  <div class="mt-2">
    <%= form.label :imagen %>
    <%= form.file_field :imagen %>
  </div>
  <div class="mt-2">
