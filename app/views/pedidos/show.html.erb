
<div class="container d-grid gap-3 my-5 fs-4 border border-2 rounded rounded-2 p-3">
  <div class="row">
    <div class="col-3">
        <strong>Codigo:</strong><br> <%= @pedido.codigo %>
      </div>
      <div class="col-7">
        <strong>Destino:</strong><br> <%= @pedido.destino %>
      </div>
      <div class="col-2 text-end">
        <strong>Total:</strong> <br><%= @pedido.total %> â‚¬
      </div>
  </div>
  <% @pedido.disco_pedidos.each do |disco_pedido| %>
    <div class="row gx-3 border-top border-1 pt-3">
      <div class="col-1"><%= image_tag "disco.png", class: "w-100" %></div>
      <div class="col-4">
        <div>
          <a class="fs-5 text-decoration-none link-dark" href="<%= disco_path(disco_pedido.disco) %>"><%= disco_pedido.disco.nombre %></a>
        </div>
        <div>
          <a class="fs-6 text-decoration-none link-secondary" href="<%= artista_path(disco_pedido.disco.artista) %>"><%= disco_pedido.disco.artista.nombre %></a>
        </div>
      </div>
      <div class="col-4 ">
        <p class="fs-5"><%= disco_pedido.cantidad %> <span class="text-secondary">uds.</span></p>
      </div>
      <div class="col-3">
        <p class="fs-4 text-end"><%= disco_pedido.disco.precio * disco_pedido.cantidad %></p>
      </div>
    </div>
  <% end %>
</div>