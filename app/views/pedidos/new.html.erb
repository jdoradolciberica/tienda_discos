<div class="container border border-2 rounded rounded-2 p-3 my-5">
  <h1 class="display-5">Completar pedido</h1>
  <div class="d-grid gap-3 mt-4">
    <div class="row">
      <div class="col-12">
        <p>Total a pagar: <%= carrito_total(@carrito) %>€</p>
      </div>
    </div>
    <%= form_with url: pedidos_url, method: :post do |f| %>
      <div class="row">
        <div class="col-3">
          <%= f.label :destino, "Dirección envio" %>
        </div>
        <div class="col-9">
          <%= f.text_field :destino, placeholder: "Dirección de envio", class: "w-100", required: true %>
        </div>
      </div>
      <div class="row mt-3">
        <div class="col">
          <%= f.submit "Pagar", class: "btn btn-primary w-100" %>
        </div>
      </div>
    <% end %>
  </div>
</div>